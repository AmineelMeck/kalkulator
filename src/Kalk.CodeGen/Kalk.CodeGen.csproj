<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <LangVersion>8.0</LangVersion>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Broslyn" Version="1.0.1" />
    <PackageReference Include="Scriban" Version="3.0.0-alpha.8" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="3.8.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\Kalk.Core\Model\KalkDescriptor.cs">
      <Link>KalkDescriptor.cs</Link>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Remove="System.Runtime.Intrinsics.xml" />
    <Content Include="System.Runtime.Intrinsics.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <None Remove="intel-intrinsics-data-latest.xml" />
    <Content Include="intel-intrinsics-data-latest.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
